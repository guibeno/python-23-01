#criptografar palavra

palavra = input('Digite a palavra: ')
palavra = palavra.upper()
print(palavra)
CARACTERE = ['ABCDEFGHIJKLMNOPQRSTUVWYZ']
chave = int(input('Digite o valor da chave: '))
modo = input('digite E para embaralhar, e D para desembaralhar: ')
aspas = ''
for caractere in palavra:
    for caractere in CARACTERE:
        num = CARACTERE.find (caractere)
        if modo == 'E':
            num = num + chave
        elif modo == 'D':
            num = num - chave
